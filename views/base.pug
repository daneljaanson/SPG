doctype html

html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/css/style.css")
    script(src='./js/FOUC_FIX.js')
    title SDG
  body
    main.game-window
        .container.container--intro
          .container-inner
            h1.heading-primary= data
            form.intro(action="" method="post") 
              .intro__input
                label.intro__label Name
                input(type="text" name="name" id="name" required)
              .intro__input
                label.intro__label Room code
                input(type="text" name="code" id="code")
              .intro__submit
                input.btn.btn--create-room(type="submit" value="Create") 
                input.btn.btn--join-room(type="submit" value="Join") 

        .container.container--room
          .container-inner
            h2.heading-secondary Room
            .lds-ellipsis-container
                .lds-ellipsis
                    div
                    div
                    div
                    div
            .room 
              label.room__code-label Room code:
              label.room__code
              label.room__players-label Players:
              ul.room__player-list
              input.btn.btn--start-game(type="button" value="Start game") 
        


        .container.container--game
          .container-inner
            h2.heading-secondary Game screen

        .container.container--round-end
          .container-inner
            h2.heading-secondary Round end screen
            button.btn Next game

        .container.container--game-end
          .container-inner
            h2.heading-secondary Game end
            button.btn New game

    script(src='./js/index.js' type="module")
